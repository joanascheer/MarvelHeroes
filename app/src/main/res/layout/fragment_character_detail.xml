<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.characterdetail.view.CharacterDetailFragment">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:contentDescription="Imagem de personagem Marvel"
        android:id="@+id/iv_detalhe_personagem"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/dr_estranho"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_detalhe_nome_personagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_detalhe_personagem"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Nome Personagem"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/tv_detalhe_descricao_personagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tv_detalhe_nome_personagem"
        android:text="Descrição exemplo"
        android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>